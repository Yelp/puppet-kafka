# Note: This file is managed by Puppet.

ENABLED=<%= @enable ? 'yes' : 'no' %>

<% if @java_home -%>
JAVA_HOME="<%= @java_home %>"
<% end -%>
<% if @heap_opts -%>
KAFKA_HEAP_OPTS="<%= @heap_opts %>"
<% end -%>
<% if @gc_log_enabled -%>
GC_LOG_ENABLED=<%= @gc_log_enabled ? 'true' : 'false' %>
<% end -%>
<% if @jmx_port -%>
JMX_PORT=<%= @jmx_port %>
<% end -%>
<% if @classpath -%>
CLASSPATH="<%= @classpath %>"
<% end -%>
<% if @kafka_log_directory %>
LOG_DIR=<%= @kafka_log_directory %>
<% end -%>
<% if @jvm_performance_opts %>
KAFKA_JVM_PERFORMANCE_OPTS=<%= @jvm_performance_opts %>
<% end -%>
