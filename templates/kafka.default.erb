# Note: This file is managed by Puppet.

ENABLED=<%= scope.lookupvar('kafka::server::enable') ? 'yes' : 'no' %>

<% if scope.lookupvar('kafka::server::java_home') -%>
JAVA_HOME="<%= scope.lookupvar('kafka::server::java_home') %>"
<% end -%>
<% if scope.lookupvar('kafka::server::heap_opts') -%>
KAFKA_HEAP_OPTS="<%= scope.lookupvar('kafka::server::heap_opts') %>"
<% end -%>
<% if scope.lookupvar('kafka::server::gc_log_enabled') -%>
GC_LOG_ENABLED=<%= scope.lookupvar('kafka::server::gc_log_enabled') ? 'true' : 'false' %>
<% end -%>
<% if scope.lookupvar('kafka::server::jmx_port') -%>
JMX_PORT=<%= scope.lookupvar('kafka::server::jmx_port') %>
<% end -%>
<% if scope.lookupvar('kafka::server::classpath') -%>
CLASSPATH="<%= scope.lookupvar('kafka::server::classpath') %>"
<% end -%>
<% if scope.lookupvar('kafka::server::kafka_log_directory') %>
LOG_DIR=<%= scope.lookupvar('kafka::server::kafka_log_directory') %>
<% end -%>
<% if scope.lookupvar('kafka::server::jvm_performance_opts %>
KAFKA_JVM_PERFORMANCE_OPTS="<%= scope.lookupvar('kafka::server::jvm_performance_opts %>"
<% end -%>
